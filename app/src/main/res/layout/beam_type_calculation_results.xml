<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/reactions_graph"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/Black"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/Black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Moment_Diagram"
            style="@style/textview_style_1"/>
        <TextView
            android:id="@+id/momentdiagram_unit"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            tools:text="N*m"/>
    </LinearLayout>
    <com.jjoe64.graphview.GraphView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph_moment" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/Black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Shear_Diagram"
            style="@style/textview_style_1"/>
        <TextView
            android:id="@+id/sheardiagram_unit"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            tools:text="N"/>
    </LinearLayout>
    <com.jjoe64.graphview.GraphView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/graph_shear"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/Black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            style="@style/textview_style_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Deflection_Diagram" />

        <TextView
            android:id="@+id/defleciondiagram_unit"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            tools:text="m"/>
    </LinearLayout>
    <com.jjoe64.graphview.GraphView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/graph_deflection"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/Black"/>
</LinearLayout>
</ScrollView>